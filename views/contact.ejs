  <% include common/nav %>
  <div class="container">
    <div class="row">
      <h1 class="page-header text-center">Contact</h1>
    </div>

    <!-- Content Row -->
    <div class="row">
      <!-- Map Column -->
      <div class="col-md-8">
        <!-- Embedded Google Map -->
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2859.1155446723337!2d-76.49732988448358!3d44.22527947910588!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4cd2ab0fccd925e9%3A0x268a8a4f5c257211!2sQueen&#39;s+University!5e0!3m2!1sen!2sca!4v1475424929188" width="100%" height="400px" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" style="border:0" allowfullscreen></iframe>
      </div>
      <!-- Contact Details Column -->
      <div class="col-md-4">
        <h3>Queen's Global Energy Conference</h3>
        <h4>Queen's University</h4>
        <p>
          99 University Ave<br>Kingston, ON K7L 3N6<br>
        </p>
        <p><i class="fa fa-envelope-o"></i> 
          <abbr title="Email">E</abbr>: <a href="mailto:qgec@engsoc.queensu.ca">qgec@engsoc.queensu.ca</a>
        </p>
        <ul class="list-unstyled list-inline list-social-icons">
          <li>
            <a href="https://www.facebook.com/officialQGEC/"><i class="fa fa-facebook-square fa-2x"></i></a>
          </li>
          <li>
            <a href="#"><i class="fa fa-linkedin-square fa-2x"></i></a>
          </li>
          <li>
            <a href="#"><i class="fa fa-twitter-square fa-2x"></i></a>
          </li>
          <li>
            <a href="#"><i class="fa fa-google-plus-square fa-2x"></i></a>
          </li>
        </ul>
        <p class="minor-section">
          QGEC proceedings occur near Queen's University campus.
        </p>
      </div>
    </div>

    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row section">
      <div class="col-md-8">
        <h3>Send us a Message</h3>
        <form name="sentMessage" id="contactForm" novalidate>
          <div class="control-group form-group">
            <div class="controls">
              <label>Full Name:</label>
              <input type="text" class="form-control" id="name" required data-validation-required-message="Please enter your name.">
              <p class="help-block"></p>
            </div>
          </div>
          <div class="control-group form-group">
            <div class="controls">
              <label>Phone Number:</label>
              <input type="tel" class="form-control" id="phone" required data-validation-required-message="Please enter your phone number.">
            </div>
          </div>
          <div class="control-group form-group">
            <div class="controls">
              <label>Email Address:</label>
              <input type="email" class="form-control" id="email" required data-validation-required-message="Please enter your email address.">
            </div>
          </div>
          <div class="control-group form-group">
            <div class="controls">
              <label>Message:</label>
                <textarea rows="10" cols="100" class="form-control" id="message" required data-validation-required-message="Please enter your message" maxlength="999" style="resize:none"></textarea>
            </div>
          </div>
          <div id="success"></div>
            <!-- For success/fail messages -->
            <button type="submit" class="btn btn-primary btn-block">Send</button>
        </form>
      </div>
    </div>

  </div>

  <% include common/footer %>
</body>
</html>